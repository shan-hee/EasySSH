# EasySSH 生产环境配置模板

# 生产环境配置
# NODE_ENV 由 Vite 自动管理，不需要在 .env 文件中设置

# 服务端口配置
VITE_PORT=3000
SERVER_PORT=8000

# API配置
VITE_API_BASE_URL=/api
VITE_API_TARGET=http://localhost:8000

# 生产环境特定配置
VITE_LOG_LEVEL=warn
VITE_DEV_TOOLS=false
VITE_SOURCE_MAP=false

# 缓存配置（生产环境使用较长的缓存时间）
VITE_CACHE_MEMORY_TTL=1800000  # 30分钟
VITE_CACHE_SYNC_INTERVAL=300000  # 5分钟

# 生产环境数据库配置
SQLITE_PATH=./server/data/easyssh.sqlite

# 生产环境安全配置（需要在部署时设置强密钥）
JWT_SECRET=your-production-jwt-secret-key-please-change
ENCRYPTION_KEY=your-production-encryption-key-please-change

# 生产环境跨域设置（应该设置为具体的域名）
CORS_ORIGIN=https://yourdomain.com

# 生产环境性能配置
SSH_TIMEOUT=10000
SSH_KEEP_ALIVE=30000
MAX_CONNECTIONS_PER_USER=10

# 生产环境资源限制
MAX_UPLOAD_SIZE=10485760
NODE_CACHE_TTL=3600
NODE_CACHE_CHECK_PERIOD=600

# 生产环境WebSocket配置
WS_PING_TIMEOUT=5000

# Token配置
TOKEN_EXPIRES_IN=172800  # 48小时
